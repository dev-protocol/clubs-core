---
const { meta } = Astro.props as ClubsPropsAdminPages
---

<div
	class="relative rounded-lg overflow-hidden border-[#5B8BF5] border-[3px] aspect-[5/3] h-56"
>
	<img
		role="none"
		src={meta.theme.previewImage}
		class="absolute z-10 inset-0 object-cover h-full w-full"
	/>
	<div
		role="none"
		class="absolute z-20 inset-0 bg-gradient-to-b from-black/80 to-black/30 p-8"
	>
		<h3 class="font-['Syne'] text-2xl font-bold my-6">{meta.displayName}</h3>
	</div>
</div>
