{
	"compilerOptions": {
		"lib": ["DOM", "ES2022"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ESNext",
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"declaration": true,
		"jsx": "react",
		"experimentalDecorators": true
	},
	"include": [
		"src",
		"example",
		".preview",
		"ui-preview",
		"rollup.*.mjs",
		"tailwind.config.js",
		"vitest.config.ts"
	],
	"exclude": []
}
