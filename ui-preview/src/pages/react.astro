---
import '../styles/main.scss'

import CLBWrapper from '../../../src/ui/react/CLBWrapper'
import CLBButton from '../../../src/ui/react/CLBButton'
import CLBFormField from '../../../src/ui/react/CLBFormField'
import CLBLink from '../../../src/ui/react/CLBLink'
import CLBSelectField from '../../../src/ui/react/CLBSelectField'
import CLBTier from '../../../src/ui/react/CLBTier'
---

<!doctype html>
<html lang="en" hashi-theme="dark">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Clubs Core React UI Testing</title>
</head>
<body>
<CLBWrapper>
	<main class="content-wrap">
		<div class="mb-4"><CLBButton type="outlined" link="/">Go Back</CLBButton></div>
		<section id="clb-buttons">
			<h2>Index components</h2>
			<div class="flex flex-row gap-[0.5rem] mb-[1rem]">
				<CLBButton>Default</CLBButton>
				<CLBButton type="outlined">Outlined</CLBButton>
				<CLBButton type="filled">Filled</CLBButton>
			</div>
			<div class="flex flex-row gap-2">
				<CLBButton isDisabled>Default Disabled</CLBButton>
				<CLBButton isDisabled type="outlined">Outlined Disabled</CLBButton>
				<CLBButton isDisabled type="filled">Filled Disabled</CLBButton>
			</div>
		</section>

		<section id="clb-links">
			<h2>CLBLink components</h2>
			<p class="mb-[0.5rem]">Lorem ipsum <CLBLink link="#">on-page link test</CLBLink> sit amet, consectetur adipisicing elit. Eius ratione voluptates voluptatibus? Alias exercitationem fugiat labore pariatur quia repellat saepe voluptatum? Dolor dolores necessitatibus odio quod <CLBLink link="#">on-page link test</CLBLink>. Dicta, porro, quidem!</p>
			<p>Lorem ipsum dolor sit amet, <CLBLink link="https://google.com">external link test</CLBLink> adipisicing elit. Beatae dolor ducimus ipsam nulla odit perspiciatis placeat provident quaerat tenetur totam?</p>
		</section>

		<section id="clb-form-fields">
			<h2>CLBFormField components</h2>
			<CLBFormField label="Text Field" type="text" placeholder="Placeholder..." helper="Helper Text" />
			<CLBFormField label="Text Area Field" type="textarea" placeholder="Placeholder..." helper="Helper Text" />
			<CLBFormField label="Number Field" type="number" placeholder="1-100..." helper="Select a number" />
			<CLBFormField isDisabled label="E-mail Field" type="email" placeholder="This input is disabled"  />
			<CLBFormField isReadonly label="Password Field" type="password" placeholder="This input is readonly" />
		</section>

		<section id="clb-select-fields">
			<h2>CLBSelectField components</h2>
			<CLBSelectField label="Test CLBSelectField" helper="Helper Text">
				<option value="val">Value</option>
			</CLBSelectField>
			<CLBSelectField label="Test CLBSelectField" helper="Helper Text" isDisabled>
				<option value="val">Value</option>
			</CLBSelectField>
		</section>

		<section id="clb-tiers">
			<h2>CLBTier components</h2>
			<CLBTier title="CLBTier" subtitle="500 DEV">
				<CLBButton type="filled">Select</CLBButton>
			</CLBTier>
		</section>
	</main>
</CLBWrapper>
</body>
</html>
