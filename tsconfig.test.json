{
	"compilerOptions": {
		"module": "UMD",
		"moduleResolution": "Node",
		"target": "ESNext",
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"jsx": "react"
	},
	"include": ["src", "example", "planned-structure"],
	"exclude": ["src/ui"]
}
